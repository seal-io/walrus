// WithoutFields returns the fields ignored the given list.
func WithoutFields(ignores ...string) []string {
    if len(ignores) == 0 {
        return Columns
    }

    var s = make(map[string]bool, len(ignores))
    for i := range ignores {
        s[ignores[i]] = true
    }

    var r = make([]string, 0, len(Columns) - len(s))
    for i := range Columns {
        if s[Columns[i]] {
            continue
        }
        r = append(r, Columns[i])
    }
    return r
}
